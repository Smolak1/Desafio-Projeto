let rankeadas = partidas(10) //por que eu usaria laço de repetição? não sei onde encaixar ;(


function partidas(vitorias, derrotas = 0){ //fiz com que o argumento 2 seja 0 como default.
  return vitorias - derrotas
}

if (rankeadas <= 10){
  console.log("O Herói tem saldo de " + rankeadas + " vitórias e está no nivel de Ferro")
}
else if (rankeadas <= 20){
  console.log("O Herói tem saldo de " + rankeadas + " vitórias e está no nivel de Bronze")}

else if (rankeadas <= 50){
  console.log("O Herói tem saldo de " + rankeadas + " vitórias e está no nivel de Prata")}

else if (rankeadas <= 80){
  console.log("O Herói tem saldo de " + rankeadas + " vitórias e está no nivel de Ouro")}

else if (rankeadas <= 90){
  console.log("O Herói tem saldo de " + rankeadas + " vitórias e está no nivel de Diamante")}

else if (rankeadas <= 100){
  console.log("O Herói tem saldo de " + rankeadas + " vitórias e está no nivel de Lendário")}

else if (rankeadas >= 101){
  console.log("O Herói tem saldo de " + rankeadas + " vitórias e está no nivel de Imortal")}

